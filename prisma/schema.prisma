model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  entity    String
  entityId  String
  action    String // CREATE, UPDATE, DELETE
  oldValue  Json?
  newValue  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user           User          @relation(fields: [userId], references: [id])
  colaborators   Colaborators? @relation(fields: [colaboratorsId], references: [id])
  colaboratorsId String?
}
